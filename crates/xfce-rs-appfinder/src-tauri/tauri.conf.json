{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "XFCE App Finder",
  "version": "0.1.0",
  "identifier": "rs.xfce.appfinder",
  "build": {
    "frontendDist": "../ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "XFCE App Finder",
        "width": 700,
        "height": 500,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; connect-src ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "appimage"
    ],
    "category": "Utility",
    "shortDescription": "Application launcher for XFCE.rs",
    "longDescription": "A modern application finder and launcher for the XFCE.rs desktop environment, built with Tauri."
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}